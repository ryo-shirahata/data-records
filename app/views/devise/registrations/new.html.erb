<%= render "shared/header" %>

<div class="main">
  <div class="inner">
    <div class="form-wrapper">
      <h2 class="page-heading">アカウント作成</h2>

      <%= form_with model: @user, url: user_registration_path,local: true do |f| %>

        <div class="field">
          <%= f.label :nickname, "ユーザー名" %><br />
          <%= f.text_field :nickname, class:"input-text" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, class:"input-text", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, class:"input-text", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"form-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>