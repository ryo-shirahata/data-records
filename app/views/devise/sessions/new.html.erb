<%= render "shared/header" %>

<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザーログイン</h2>

      <%= form_with model: @user, url: user_session_path,local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, class:"input-text", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, class:"input-text", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class:"form-btn" %>
        </div>

      <% end %>
    </div>
  </div>
</div>